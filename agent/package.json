{
  "name": "workwise-agent",
  "version": "1.0.0",
  "description": "WorkWise Desktop Tracking Agent",
  "main": "main.js",
  "author": {
    "name": "WorkWise",
    "email": "support@workwise.app"
  },
  "homepage": "https://workwise.app",
  "license": "ISC",
 "scripts": {
  "start": "electron .",
  "dev": "electron .",
  "build": "electron-builder",
  "build:mac": "electron-builder --mac dmg",
  "build:win": "electron-builder --win",
  "build:linux": "electron-builder --linux"
},
  "dependencies": {
    "axios": "^1.13.5",
    "form-data": "^4.0.5",
    "screenshot-desktop": "^1.15.3"
  },
  "optionalDependencies": {
    "active-win": "^9.0.0",
    "get-windows": "^9.2.3"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.workwise.agent",
    "productName": "WorkWiseAgent",
    "copyright": "Copyright Â© 2026 WorkWise",
    "directories": {
      "output": "dist"
    },

    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "package.json",
      "!node_modules/active-win/build-tmp-*"
    ],

    "asar": true,

    "asarUnpack": [
      "node_modules/active-win/**/*"
    ],
"mac": {
  "target": "dmg",
  "artifactName": "WorkWiseAgent-${version}-${arch}-mac.${ext}",
  "category": "public.app-category.productivity",
  "minimumSystemVersion": "10.15",
  "hardenedRuntime": false,
  "gatekeeperAssess": false
},

    "win": {
      "target": "nsis",
      "artifactName": "WorkWiseAgent-Setup-${version}.exe"
    },

    "linux": {
      "target": ["AppImage", "deb"],
      "artifactName": "WorkWiseAgent-${version}.${ext}",
      "category": "Utility",
      "maintainer": "WorkWise <support@workwise.app>"
    }
  }
}